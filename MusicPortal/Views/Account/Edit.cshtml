@model MusicPortal.Models.User

@{
    ViewBag.Title = Resources.Resource.Edit;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-image: url('/Images/Slipknot-Corey-Taylor.jpg');
        color: white;
    }

    h1 {
        text-align: center;
        color: white;
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        display: block;
        margin-bottom: 5px;
        color: white;
    }

    input[type="text"],
    input[type="number"],
    textarea {
        width: 100%;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
        background-color: #333;
        color: white;
    }

    input[type="file"] {
        margin-top: 5px;
    }

    input[type="submit"] {
        background-color: #ffaa00;
        color: #222;
        padding: 10px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        width: 100%;
    }

    input[type="submit"]:hover {
        background-color: #ffc107;
    }

    .back-action a {
        display: block;
        text-align: center;
        margin-bottom: 20px;
        color: #ffaa00;
        text-decoration: none;
    }

    .back-action a:hover {
        color: #ffc107;
    }

    .btn-primary {
        background-color: #ffaa00;
        color: #222;
        border: none;
    }

    .btn-primary:hover {
        background-color: #ffc107;
        color: #222;
        text-decoration: none;
    }
</style>

<h1>@Resources.Resource.Edit</h1>

<form asp-controller="Account" asp-action="Edit" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="FirstName" class="control-label">@Resources.Resource.FirstName</label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LastName" class="control-label">@Resources.Resource.LastName</label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Login" class="control-label">@Resources.Resource.UserLogin</label>
        <input asp-for="Login" class="form-control" />
        <span asp-validation-for="Login" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AccessLevel" class="control-label">@Resources.Resource.AccessLevel</label>
        <input asp-for="AccessLevel" class="form-control">
        <span asp-validation-for="AccessLevel" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="@Resources.Resource.SaveButton" class="btn btn-primary" />
    </div>

    <div class="form-group">
        <a asp-action="Index" class="btn btn-primary">@Resources.Resource.BackToList</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
