@model IEnumerable<User>

@{
    ViewBag.Title = Resources.Resource.Users;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-image: url('/Images/Slipknot-Corey-Taylor.jpg');
        color: white;
        font-family: Arial, sans-serif;
    }

    h1 {
        color: white;
        text-align: center;
        margin-bottom: 20px;
    }

    p {
        text-align: center;
        margin-bottom: 20px;
    }

    a {
        color: #ffaa00;
        text-decoration: none;
    }

    a:hover {
        color: white;
        text-decoration: underline;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

    .table th, .table td {
        border: 1px solid #666;
        padding: 8px;
        text-align: left;
    }

    .table th {
        background-color: #333;
        color: #ffaa00;
    }

    .table td {
        background-color: #444;
        color: white;
    }

    .action-links {
        display: flex;
        justify-content: center;
    }

    .action-links a {
        margin-right: 10px;
    }

    .add-country {
        background-color: #ffaa00;
        color: #222;
        border: 1px solid #ffaa00;
        padding: 10px 20px;
        border-radius: 5px;
        transition: background-color 0.3s, color 0.3s;
    }

    .add-country:hover {
        background-color: #ffc107;
        color: white;
        text-decoration: none;
    }

    .btn-primary {
        background-color: #ffaa00;
        color: #222;
        border: none;
    }

    .btn-primary:hover {
        background-color: #ffc107;
        color: #222;
        text-decoration: none;
    }
</style>

<h1>@Resources.Resource.Users</h1>

<table class="table">
    <thead>
        <tr>
            <th>@Resources.Resource.FirstName</th>
            <th>@Resources.Resource.LastName</th>
            <th>@Resources.Resource.Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>
                    <a asp-controller="Account" asp-action="Edit" asp-route-id="@user.Id">@Resources.Resource.Edit</a> |
                    <a asp-controller="Account" asp-action="Delete" asp-route-id="@user.Id">@Resources.Resource.Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">@Resources.Resource.BackToList</a>
</div>