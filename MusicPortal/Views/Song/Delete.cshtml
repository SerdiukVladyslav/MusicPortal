@model MusicPortal.Models.Song


@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-image: url('/Images/Slipknot-Corey-Taylor.jpg');
        color: white;
    }

    .card {
        margin-bottom: 20px;
        color: #222;
    }

    .card-img-top {
        width: 100%;
        height: auto;
    }

    .card-body {
        text-align: center;
    }

    h2 {
        color: white;
        text-align: center;
    }

    input[type="submit"] {
        background-color: #dc3545;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        margin-bottom: 20px;
        width: 100%;
    }

    input[type="submit"]:hover {
        color: white;
        background-color: #c82333;
    }

    .btn-primary {
        background-color: #ffaa00;
        color: #222;
        border: none;
    }

    .btn-primary:hover {
        background-color: #ffc107;
        color: #222;
        text-decoration: none;
    }

    .back-action a {
        display: block;
        text-align: center;
        margin-bottom: 20px;
        color: #222;
        text-decoration: none;
    }
</style>

<h2>Ви дійсно хочете видалити цю пісню?</h2>

<div class="row justify-content-center">
    <div class="col-md-4 mx-auto">
        <div class="card mb-4 box-shadow">
            <img class="card-img-top" src="@Url.Content(Model.Albums.AlbumCover)" alt="Album Cover">
            <div class="card-body">
                <h5 class="card-title">@Model.Title</h5>
                <p class="card-text"><strong>Виконавець/Гурт:</strong> @Model.Artists.Artist</p>
                <p class="card-text"><strong>Альбом:</strong> @Model.Albums.Album</p>
                <p class="card-text"><strong>Рік:</strong> @Model.Albums.Year</p>
                <p class="card-text"><strong>Країна:</strong> @Model.Countries.Country</p>
                <p class="card-text"><strong>Жанр:</strong> @Model.Genre.Name</p>
                <audio controls>
                    <source src="@Url.Content(Model.MusicFile)" type="audio/mpeg">
                    Your browser does not support the audio element.
                </audio>
            </div>
        </div>
    </div>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="SongId" />
    <input type="submit" value="Видалити" class="btn btn-danger" />
</form>

<div class="back-action">
    <a asp-controller="Home" class="btn btn-primary" asp-action="Index">Назад до списку</a>
</div>
