@model IEnumerable<MusicPortal.Models.Artists>

@{
    ViewBag.Title = Resources.Resource.Artists;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-image: url('/Images/Slipknot-Corey-Taylor.jpg');
        color: white;
        font-family: Arial, sans-serif;
    }

    h1 {
        color: white;
        text-align: center;
        margin-bottom: 20px;
    }

    p {
        text-align: center;
        margin-bottom: 20px;
    }

    a {
        color: #ffaa00;
        text-decoration: none;
    }

    a:hover {
        color: white;
        text-decoration: underline;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

    .table th, .table td {
        border: 1px solid #666;
        padding: 8px;
        text-align: left;
    }

    .table th {
        background-color: #333;
        color: #ffaa00;
    }

    .table td {
        background-color: #444;
        color: white;
    }

    .action-links {
        display: flex;
        justify-content: center;
    }

    .action-links a {
        margin-right: 10px;
    }

    .add-artist {
        background-color: #ffaa00;
        color: #222;
        border: 1px solid #ffaa00;
        padding: 10px 20px;
        border-radius: 5px;
        transition: background-color 0.3s, color 0.3s;
    }

    .add-artist:hover {
        background-color: #ffc107;
        color: white;
        text-decoration: none;
    }

    .btn-primary {
        background-color: #ffaa00;
        color: #222;
        border: none;
    }

    .btn-primary:hover {
        background-color: #ffc107;
        color: #222;
        text-decoration: none;
    }
</style>

<h1>@Resources.Resource.Artists</h1>

<p>
    <a asp-action="Create" class="add-artist">@Resources.Resource.AddArtist</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Resources.Resource.ArtistName
            </th>
            <th>
                @Resources.Resource.Action
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Artist)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">@Resources.Resource.Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">@Resources.Resource.Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<div>
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">@Resources.Resource.BackToList</a>
</div>
